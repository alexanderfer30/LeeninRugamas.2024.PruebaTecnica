@model Producto

<h1>Crear Producto</h1>
<a href="/productos" class="btn btn-secondary">Volver a la lista de productos</a>

<form method="post" action="/productos/crear">
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" value="@Model.Nombre" required />
    </div>

    <div class="form-group">
        <label for="precio">Precio</label>
        <input type="number" step="0.01" class="form-control" id="precio" name="precio" value="@Model.Precio" required />
    </div>

    <div class="form-group">
        <label for="idCategoria">Categoría</label>
        <select class="form-control" id="idCategoria" name="idCategoria" required>
            <option value="">Seleccione una categoría</option>
            @foreach (var categoria in ViewData["Categorias"] as List<Categoria>)
            {
                <option value="@categoria.Id">@categoria.Nombre</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Crear Producto</button>
</form>
